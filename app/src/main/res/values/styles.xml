<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="themeTransStatusbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="defaultButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>


    <style name="TextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInput">
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="TextInputLabe">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="bottomNav" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorRed</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
